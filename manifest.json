{
    "manifest_version": 2,

    "name": "AFKayoko",
    "version": "0.1",
    "description": "Automated answering Kayoko's questions.",

    "web_accessible_resources": ["script.js"],
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
        "default_title": "AFKayoko",
        "default_popup": "popup.html",
        "default_icon": {
          "128": "img/icon-inactive.png"
            }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "icons": {
      "128": "img/icon-extensionMenu.png"
    }
}
